<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    tools:context=".ReportActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/splash_gradient"
            android:layout_gravity="center_vertical"
            android:layout_height="80dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="8dp"
                android:id="@+id/img_back"
                android:src="@drawable/back" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reports"
                android:textColor="@color/color_white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:id="@+id/txt_title"
                android:layout_gravity="center"
                />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="8dp"
                android:visibility="gone"
                android:id="@+id/add_customer"
                android:src="@drawable/add" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/color_white"
            android:paddingLeft="5dp"
            android:orientation="vertical"
            android:paddingRight="5dp">
          ///



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/color_white"
                        android:paddingLeft="5dp"
                        android:orientation="vertical"
                        android:paddingRight="5dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Today"
                            android:textColor="@color/color_black"
                            android:padding="5dp"
                            android:id="@+id/txt_today"
                            android:textSize="18sp"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/dark_grey"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Yesterday"
                            android:textColor="@color/color_black"
                            android:padding="5dp"
                            android:id="@+id/txt_yesterday"
                            android:textSize="18sp"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/dark_grey"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            />
                        ///last 7 days
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Last 7 days"
                            android:textColor="@color/color_black"
                            android:padding="5dp"
                            android:id="@+id/txt_last_seven_days"
                            android:textSize="18sp"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/dark_grey"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            />
                        /// LAST 30 DAYS
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Last 30 days"
                            android:textColor="@color/color_black"
                            android:padding="5dp"
                            android:id="@+id/txt_lastthirtydays"
                            android:textSize="18sp"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/dark_grey"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            />

                        /// PREVIOUS MONTH
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Previous Month"
                            android:textColor="@color/color_black"
                            android:padding="5dp"
                            android:id="@+id/txt_previousmonth"
                            android:textSize="18sp"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/dark_grey"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            />
                        /// CURRENET MONTH
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Current Month"
                            android:textColor="@color/color_black"
                            android:padding="5dp"
                            android:id="@+id/txt_currentmonth"
                            android:textSize="18sp"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/dark_grey"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            />

                        /// GRAND REPORT
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Grand Report"
                            android:textColor="@color/color_black"
                            android:padding="5dp"
                            android:id="@+id/txt_grandreport"
                            android:textSize="18sp"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/dark_grey"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            />
                        /// CUSTOM DATES
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Custom Dates"
                            android:textColor="@color/color_black"
                            android:padding="5dp"
                            android:id="@+id/txt_custdates"
                            android:textSize="18sp"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/dark_grey"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            />


                    </LinearLayout>


              ///


        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>